
@model IEnumerable<Department>;

@if(Model.Count() > 0)
{
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(D => D.code)</th>
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.CreateAt)</th>
           
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.code</td>
                <td>@department.Name</td>
                <td>@department.CreateAt</td>
                <td>
                    <a asp-action="Details" asp-route-id ="department.Id" class="btn btn-warning">
                        <i class="fas fa-eye"></i> Details
                    </a>
                </td>  
                <td>
                    <a asp-action="Update" asp-route-id ="department.Id" class="btn btn-warning">
                        <i class="fas fa-Edit"></i> Update
                    </a>
                </td> 
                <td>
                    <a asp-action="Delete" asp-route-id ="department.Id" class="btn btn-danger">
                        <i class="fas fa-Trash"></i> Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
}
else
{
    <div class=" mt-5 alert alert-warning">
        <h3>
            There is no Department
        </h3>
    </div>
}